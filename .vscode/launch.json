{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Firefox",
      "type": "firefox",
      "request": "launch",
      "profile": "dev-edition-default",
      "keepProfileChanges": true,
      "reAttach": true,
      "url": "https://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "pathMappings": [
        {
          "url": "https://localhost:3000/almanime-frontend/",
          "path": "${workspaceFolder}/"
        }
      ]
    }
  ]
}