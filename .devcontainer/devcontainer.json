{
  "name": "Node.js & TypeScript",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-18",
  "workspaceMount": "source=${localEnv:HOME}/${localWorkspaceFolderBasename},target=/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "workspaceFolder": "/${localWorkspaceFolderBasename}",
  "runArgs": [
    "--name",
    "almanime_frontend_devcontainer"
  ],
  "features": {
    "ghcr.io/devcontainers-contrib/features/pulumi:1": {}
  },
  "postAttachCommand": "yarn install",
  "containerEnv": {
    "HTTPS": "true",
    "REACT_APP_SHOULD_PERSIST_QUERIES": "false",
    "REACT_APP_SENTRY_DSN": "https://c4ecd23a74ab47d3aae4731d1e878a25@o1160005.ingest.sentry.io/6245124",
    "REACT_APP_API": "https://localhost:7116/api/v1"
    // "REACT_APP_API": "http://192.168.0.200:9080/api/v1"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "mhutchie.git-graph",
        "GitHub.vscode-pull-request-github",
        "dbaeumer.vscode-eslint",
        "stylelint.vscode-stylelint",
        "pflannery.vscode-versionlens",
        "Orta.vscode-jest",
        "bierner.markdown-preview-github-styles",
        "firefox-devtools.vscode-firefox-debug",
        "vscode-icons-team.vscode-icons"
      ],
      "settings": {
        // --- Common settings ---
        "debug.terminal.clearBeforeReusing": true,
        "diffEditor.codeLens": true,
        "editor.bracketPairColorization.enabled": true,
        "editor.formatOnSave": true,
        "editor.hover.above": false,
        "editor.guides.bracketPairs": true,
        "editor.guides.highlightActiveBracketPair": true,
        "editor.tabSize": 2,
        "editor.codeActionsOnSave": {
          "source.fixAll.stylelint": true
        },
        "explorer.confirmDragAndDrop": false,
        "files.autoSave": "afterDelay",
        "git-graph.repository.fetchAndPrune": true,
        "git-graph.repository.fetchAndPruneTags": true,
        "git-graph.repository.onLoad.showCheckedOutBranch": true,
        "git-graph.repository.onLoad.showSpecificBranches": [
          "master",
          "remotes/origin/master"
        ],
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,
        "git.pruneOnFetch": true,
        "window.autoDetectColorScheme": true,
        "workbench.colorTheme": "Default Light+ Experimental",
        "[json]": {
          "editor.defaultFormatter": "vscode.json-language-features"
        },
        // --- Typescript settings ---
        "typescript.preferences.quoteStyle": "single",
        "typescript.updateImportsOnFileMove.enabled": "always",
        // --- Javascript-Node settings ---
        "eslint.format.enable": true,
        "javascript.updateImportsOnFileMove.enabled": "always",
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        // Automatic linting of SCSS
        "css.validate": false,
        "less.validate": false,
        "scss.validate": false,
        "stylelint.configBasedir": "/usr/local/share/npm-global/lib",
        "stylelint.validate": [
          "css",
          "scss"
        ],
        "[scss]": {
          "editor.defaultFormatter": "stylelint.vscode-stylelint"
        },
        "stylelint.config": {
          "extends": "stylelint-config-sass-guidelines",
          "rules": {
            "declaration-property-value-no-unknown": true,
            "selector-class-pattern": null,
            "color-hex-case": "upper"
          }
        },
        // End automatic linting of SCSS
        "jest": {
          "autoRun": "off",
          "showTerminalOnLaunch": false,
          "showCoverageOnLoad": true,
          "coverageFormatter": "DefaultFormatter"
        }
      }
    }
  }
}